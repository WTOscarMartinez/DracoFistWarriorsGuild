@page
@model DracoFistWarriorsGuild.Pages_Quests.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Quest</h4>
    
    <hr />
    <dl class="row">
        <div class="col-sm-12">
            <img src="@Url.Content("~/"+Model.Quest.ImgUrl)" alt="" class="col-sm-6 img-fluid" />
        </div>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quest.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quest.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quest.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quest.Description)
        </dd>
        <div class="col-sm-12">
            <img src="@Url.Content("~/"+Model.Quest.RewardImgURL)" alt="" class="col-sm-3 img-fluid" />
        </div>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quest.Reward)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quest.Reward)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quest.PostedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quest.PostedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quest.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quest.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quest.CompletedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quest.CompletedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quest.CompletedOn)
        </dt>
        <dd class="col-sm-10">
            @{
                if(@Model.Quest.CompletedOn != default){
                    @Html.DisplayFor(model => model.Quest.CompletedOn)
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Quest.QuestID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
