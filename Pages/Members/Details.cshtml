@page
@model DracoFistWarriorsGuild.Pages_Members.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Member</h4>
    <hr />
    <dl class="row">
        <div class="col-12 mb-4">
            <img src="@Url.Content("~/"+Model.Member.ImgUrl)" alt="" class="col-3 img-fluid" />
        </div>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.Class)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.Class)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.Race)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.Race)
        </dd>
        <dt class="col-sm-2">
            Current @Html.DisplayNameFor(model => model.Member.Quest)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.Quest.Description)
        </dd>
        <div class="mt-2">
                <label><strong>Quest History:</strong></label>
                @{
                    foreach (var quest in @Model.QuestHistory)
                    {
                            <p class="mt-2">@quest.Description <strong>CompletedOn:</strong> @quest.CompletedOn</p>
                    }
                    if(@Model.QuestHistory.Count() == 0){
                        <p class="mt-2">None</p>
                    }
                }
        </div>
    </dl>
</div>
<hr />
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Member.MemberID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
